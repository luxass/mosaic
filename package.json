{
  "name": "@luxass/projectrc-monorepo",
  "description": "Monorepo for @luxass/projectrc",
  "type": "module",
  "private": true,
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@8.12.1",
  "license": "MIT",
  "homepage": "https://github.com/luxass/projectrc",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/projectrc",
    "directory": "www"
  },
  "bugs": {
    "url": "https://github.com/luxass/projectrc/issues"
  },
  "workspaces": [
    "www",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency=40 --parallel",
    "lint": "eslint . --report-unused-disable-directives",
    "test": "turbo run test",
    "test:watch": "turbo run test",
    "typecheck": "turbo run typecheck",
    "bump": "npx bumpp packages/projectrc/package.json"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.0.0-beta.17",
    "@types/node": "^18.18.8",
    "eslint": "^8.56.0",
    "eslint-plugin-format": "^0.1.0",
    "tsup": "^8.0.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
