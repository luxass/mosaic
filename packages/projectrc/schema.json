{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "The description of the project."
    },
    "handles": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^"
      },
      "description": "The handles of the project. Will be able to be used in luxass.dev/<PROJECT_HANDLE>"
    },
    "ignore": {
      "type": "boolean",
      "description": "Ignore this project."
    },
    "npm": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ],
      "description": "The npm package name of the project."
    },
    "readme": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ],
      "description": "The path to the readme file."
    },
    "website": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "description": "The website of the project. If set to `true`, the website is based on repository URL."
    },
    "deprecated": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "The deprecation message."
        },
        "replacement": {
          "type": "string",
          "description": "The replacement package. If not set, the package is considered deprecated without a replacement."
        }
      },
      "required": [
        "message"
      ],
      "description": "Deprecation information."
    },
    "monorepo": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable monorepo mode."
        },
        "ignores": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Ignore these projects."
        },
        "overrides": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string",
                "description": "The description of the project."
              },
              "handles": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^"
                },
                "description": "The handles of the project. Will be able to be used in luxass.dev/<PROJECT_HANDLE>"
              },
              "ignore": {
                "type": "boolean",
                "description": "Ignore this project."
              },
              "npm": {
                "anyOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "string"
                  }
                ],
                "description": "The npm package name of the project."
              },
              "readme": {
                "anyOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "string"
                  }
                ],
                "description": "The path to the readme file."
              },
              "website": {
                "anyOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "string",
                    "format": "uri"
                  }
                ],
                "description": "The website of the project. If set to `true`, the website is based on repository URL."
              },
              "deprecated": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "The deprecation message."
                  },
                  "replacement": {
                    "type": "string",
                    "description": "The replacement package. If not set, the package is considered deprecated without a replacement."
                  }
                },
                "required": [
                  "message"
                ],
                "description": "Deprecation information."
              }
            },
            "required": [
              "name"
            ]
          },
          "description": "Override project configuration."
        }
      },
      "description": "Monorepo configuration"
    }
  }
}
