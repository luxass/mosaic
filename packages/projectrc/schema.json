{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "The description of the project. Will be used as meta description."
    },
    "title": {
      "type": "string",
      "description": "The title of the project. Will be used as title."
    },
    "ignore": {
      "type": "boolean",
      "description": "Ignore this project in the project list."
    },
    "npm": {
      "anyOf": [
        {
          "type": "boolean",
          "description": "If set to true, will infer the npm package name from repository and also include downloads"
        },
        {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable if project has a npm package, if `link` is not set the package name is auto inferred from the repository"
            },
            "name": {
              "type": "string",
              "description": "Override the auto inferred npm package name."
            },
            "downloads": {
              "type": "boolean",
              "description": "Include the npm package downloads."
            }
          },
          "required": [
            "enabled"
          ]
        }
      ]
    },
    "readme": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ],
      "description": "The path to the readme file. If set to true the readme file is the root readme file."
    },
    "website": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ],
      "description": "The website of the project. If set to `true`, the website is based on repository URL."
    },
    "stars": {
      "type": "boolean",
      "description": "Include repository stars"
    },
    "version": {
      "type": "boolean",
      "description": "Include latest version of the npm package, will use either a tag from github or the latest version from npm."
    },
    "deprecated": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "The deprecation message."
        },
        "replacement": {
          "type": "string",
          "description": "The replacement package. If not set, the package is considered deprecated without a replacement."
        }
      },
      "required": [
        "message"
      ],
      "description": "Deprecation information."
    },
    "workspace": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Is monorepo workspaces enabled"
        },
        "ignores": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Ignore these projects."
        },
        "overrides": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string",
                "description": "The description of the project. Will be used as meta description."
              },
              "title": {
                "type": "string",
                "description": "The title of the project. Will be used as title."
              },
              "ignore": {
                "type": "boolean",
                "description": "Ignore this project in the project list."
              },
              "npm": {
                "anyOf": [
                  {
                    "type": "boolean",
                    "description": "If set to true, will infer the npm package name from repository and also include downloads"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "type": "boolean",
                        "description": "Enable if project has a npm package, if `link` is not set the package name is auto inferred from the repository"
                      },
                      "name": {
                        "type": "string",
                        "description": "Override the auto inferred npm package name."
                      },
                      "downloads": {
                        "type": "boolean",
                        "description": "Include the npm package downloads."
                      }
                    },
                    "required": [
                      "enabled"
                    ]
                  }
                ]
              },
              "readme": {
                "anyOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "string"
                  }
                ],
                "description": "The path to the readme file. If set to true the readme file is the root readme file."
              },
              "website": {
                "anyOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "string",
                    "format": "uri"
                  }
                ],
                "description": "The website of the project. If set to `true`, the website is based on repository URL."
              },
              "stars": {
                "type": "boolean",
                "description": "Include repository stars"
              },
              "version": {
                "type": "boolean",
                "description": "Include latest version of the npm package, will use either a tag from github or the latest version from npm."
              },
              "deprecated": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "The deprecation message."
                  },
                  "replacement": {
                    "type": "string",
                    "description": "The replacement package. If not set, the package is considered deprecated without a replacement."
                  }
                },
                "required": [
                  "message"
                ],
                "description": "Deprecation information."
              }
            },
            "required": [
              "name"
            ]
          },
          "description": "Override project configuration."
        }
      },
      "description": "Workspace configuration"
    }
  }
}
