{
  "name": "@luxass/projectrc",
  "type": "module",
  "version": "1.3.0",
  "description": "Utils for .projectrc",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/luxass/projectrc",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/projectrc",
    "directory": "packages/projectrc"
  },
  "bugs": {
    "url": "https://github.com/luxass/projectrc/issues"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./schema": {
      "import": {
        "types": "./dist/schema.d.ts",
        "default": "./dist/schema.mjs"
      },
      "require": {
        "types": "./dist/schema.d.cts",
        "default": "./dist/schema.cjs"
      }
    },
    "./json-schema": "./schema.json",
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "schema.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/graphql": "^7.0.2",
    "github-schema": "^1.1.2",
    "ignore": "^5.2.4",
    "minimatch": "^9.0.3",
    "valibot": "^0.20.1",
    "yaml": "^2.3.4"
  }
}
